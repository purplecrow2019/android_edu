<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InformationCenterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="Course Name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@color/grey" />
            <TextView
                android:text="30 Days"
                android:gravity="end"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:background="@color/grey" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_square_grey"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightGreen"
                android:text="Active"
                android:textSize="15sp"
                android:textStyle="bold"
                android:padding="5dp" />
            <TextView
                android:id="@+id/followers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightPurple"
                android:text="32 follower gained"
                android:textSize="15sp"
                android:padding="5dp" />
            <TextView
                android:id="@+id/videosUploaded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightPurple"
                android:text="9 Videos Uploaded"
                android:textSize="15sp"
                android:padding="5dp" />
            <TextView
                android:id="@+id/watchHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightPurple"
                android:text="28 Watch hours"
                android:textSize="15sp"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/viewsTotal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightPurple"
                    android:text="300 Views"
                    android:textSize="15sp"
                    android:padding="5dp" />
                <TextView
                    android:id="@+id/viewsIndividuals"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/lightPurple"
                    android:gravity="end"
                    android:text="159 Individual views"
                    android:textSize="15sp"
                    android:padding="5dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
