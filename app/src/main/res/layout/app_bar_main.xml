<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="Lamamia"/>

                <ImageButton
                    android:id="@+id/imageButtonNotification"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:contentDescription="Notification"
                    android:foregroundGravity="right"
                    app:srcCompat="@drawable/ic_notifications_white_24dp"
                    android:layout_alignParentEnd="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <TextView
                    android:id="@+id/textViewMainNotificationCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:paddingTop="8dp"
                    android:paddingEnd="5dp"
                    android:text="00"
                    app:layout_constraintEnd_toEndOf="@+id/imageButtonNotification"
                    />

            </android.support.constraint.ConstraintLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_messenger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:background="@color/white"
            app:backgroundTint="@color/white"
            app:layout_constraintEnd_toStartOf="@+id/fab_whatsapp"
            app:srcCompat="@drawable/messenger_icon"
            tools:targetApi="lollipop" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:layout_toStartOf="@+id/fab"
            android:background="@color/white"
            android:padding="10dp"
            android:visibility="visible"
            app:backgroundTint="#25D366"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/whatsap_plogo_white"
            tools:targetApi="lollipop" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/fab_margin"
            android:visibility="gone"
            app:srcCompat="@android:drawable/ic_menu_help" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>