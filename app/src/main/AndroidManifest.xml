        <activity
            android:name=".InstructorVideoEditorActivity"
            android:label="Video Edit" />
        <activity
            android:name=".RecordVideoActivity"
            android:label="Record Video" />
        <activity android:name=".InformationCenterActivity" />
        <activity
            android:name=".MonetizationMainActivity"
            android:label="Monetization" />
        <activity
            android:name=".CourseInsightsActivity"
            android:label="Insights" />
        <activity
