            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:label="Rating"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CoursesActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:label="पाठ्यक्रम"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InstructorCourseEditActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:label="Course Edit"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InstructorAddModuleActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:label="Module add"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InstructorModuleEditActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:label="Module Edit"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InstructorAddVideoQuizActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:label="Add Video or Quiz"
            android:screenOrientation="portrait" />
        <activity
            android:name=".InstructorProfileActivity"
            android:label="प्रोफाइल"
